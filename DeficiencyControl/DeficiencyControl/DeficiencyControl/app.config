<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <system.serviceModel>
      <behaviors>
        <endpointBehaviors>
          <behavior name="behServiceDeficiency">
            <dataContractSerializer maxItemsInObjectGraph="1073741824"/>
          </behavior>
        </endpointBehaviors>
      </behaviors>
      
        <bindings>
            <basicHttpBinding>
                <binding name="BasicHttpBinding_IServiceDeficiency" maxBufferPoolSize="1073741824"
                    maxBufferSize="1073741824" maxReceivedMessageSize="1073741824">
                    <readerQuotas maxDepth="64" maxStringContentLength="1073741824"
                        maxArrayLength="1073741824" maxBytesPerRead="1073741824" maxNameTableCharCount="16384" />
                </binding>
                <binding name="BasicHttpBinding_IServiceDeficiency1" />
            </basicHttpBinding>
        </bindings>
        <client>
            <endpoint address="http://wing/DefconIGTSvc/ServiceDeficiency.xsvc"
                binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IServiceDeficiency"
                contract="WcfServiceDeficiency.IServiceDeficiency" name="WcfServiceDeficiency_Config_Cloud" />
            <endpoint address="http://localhost:56353/ServiceDeficiency.svc"
                binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IServiceDeficiency"
                contract="WcfServiceDeficiency.IServiceDeficiency" name="WcfServiceDeficiency_Config_SV" />
        </client>
    </system.serviceModel>

  <!--アプリケーション設定-->
  <appSettings>

    <!--メッセージファイル-->
    <add key="MessageFilePath" value="message.csv"/>

    <!--最大添付サイズ(MB)-->
    <add key="MaxAttachmentSizeMB" value="15"/>


    <!--*****************************************************************************************************-->
    <!--モードの場所-->
    <!--*****************************************************************************************************-->
    <!--DeficiencyControlモード青 : FileCloseを気軽に編集できるモード-->
    <!--0:無効 1:有効-->
    <add key="DeficiencyControlBlueMode" value="1"/>
    <!--*****************************************************************************************************-->
    <!--*****************************************************************************************************-->
    <!--*****************************************************************************************************-->
    <!--DB値-->    
    <!--=====================================================================================================-->
   
    
    <!--ms_action_code-->
    <!--99 free textのID値-->
    <add key="ms_action_code_99" value="16"/>


    <!--ms_userの値-->
    <!--adminのID-->
    <add key="ms_user_admin" value="1"/>
    
  </appSettings>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2"/></startup></configuration>
